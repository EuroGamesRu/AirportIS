<Window x:Class="AirportIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirportIS"
        mc:Ignorable="d"
        Title="MainWindow" 
        MinHeight="450" MinWidth="400" Height="450" Width="400" MaxHeight="450" MaxWidth="400">
    <StackPanel Margin="40" Background="LightGray" >
        <Grid Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0">Логин</Label>
            <TextBox Grid.Column="1" Grid.Row="0" Margin="3" x:Name="LoginText"></TextBox>
            
            <Label Grid.Column="0" Grid.Row="1">Пароль</Label>
            <TextBox Grid.Column="1" Grid.Row="1" Margin="3" x:Name="PWDText"></TextBox>

            <Button Grid.ColumnSpan="2" Grid.Row="2" x:Name="AuthBTN" Click="AuthBTN_Click">Авторизоваться!</Button>
        </Grid>
    </StackPanel>
</Window>
