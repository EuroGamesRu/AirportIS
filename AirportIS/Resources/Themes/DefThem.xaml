<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AirportIS.Resources.Themes"
                    xmlns:converters1="clr-namespace:AirportIS.Resources.converters">
    <converters1:RelativeToFullPatchConverter x:Key="relativeToFullPatchConverter"></converters1:RelativeToFullPatchConverter>

    <Style TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#DD6B20"/>
        <Setter Property="Margin" Value="15"/>
    </Style>

    <Style TargetType="{x:Type TextBox}">
        <Setter Property="Background" Value="#DD6B20"/>
        <Setter Property="Margin" Value="3"/>
    </Style>
    
    <Style TargetType="{x:Type PasswordBox}">
        <Setter Property="Background" Value="#DD6B20"/>
        <Setter Property="Margin" Value="3"/>
    </Style>

    <Style TargetType="{x:Type Label}">
        <Setter Property="HorizontalAlignment" Value="Left"/>
    </Style>

    <Style TargetType="Button" x:Key="btnExitStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Image Margin="10" Source="../Images/exit.png"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="menuListItemStyle" TargetType="ListBoxItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Border Height="50" BorderThickness="0" Background="Transparent" Name="_border">
                        <ContentPresenter></ContentPresenter>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="_border" Property="Background" Value="#FF2F6CBD"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="_border" Property="Background" Value="#FF2F6CBD"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>            
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="tabItemStyle" TargetType="TabItem">
        <Setter Property="Foreground" Value="#1C1A2F"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TabItem">
                    <Border Margin="4 0 4 25" Name="_border" CornerRadius="3" Background="Transparent" BorderBrush="#1c1a2f" BorderThickness="1">
                        <ContentPresenter ContentSource="Header"></ContentPresenter>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="_border" Property="Background" Value="#1c1a2f"></Setter>
                            <Setter Property="Foreground" Value="White" ></Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

